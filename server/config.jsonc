{
  // Storage configuration - defines where command output files are stored
  // If not specified, defaults to ../storage/ relative to the server executable (storage and server are siblings)
  // If specified, must be an absolute Windows-style path
  // "storage": {
  //   "directory": "C:\\Tools\\arcadia\\storage"
  // },
  // Bash configuration - defines the path to the bash executable on Windows
  "bash": {
    "path": "C:\\Program Files\\Git\\bin\\bash.exe"
  },
  // API keys - OPTIONAL
  "apiKeys": {
    "openai": null
  },
  // Computer use configuration - OPTIONAL
  "computerUse": {
    "enable": false
  },
  // SQL Server connection strings - OPTIONAL
  // Configuration is not required for SQLite as SQLite databases can be used on-the-fly without configuration
  // "connections": {
  //   "sqlServer": {
